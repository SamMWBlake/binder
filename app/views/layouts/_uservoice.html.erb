<script>
// Include UserVoice JavaScript SDK
UserVoice=window.UserVoice||[];(function(){var uv=document.createElement('script');uv.type='text/javascript';uv.async=true;uv.src='//widget.uservoice.com/z5QxNwLzz7lkTSGIk5xhg.js';var s=document.getElementsByTagName('script')[0];s.parentNode.insertBefore(uv,s)})();

<% if user_signed_in? %>
// Identify user
UserVoice.push(['identify', {
  email:      <%= current_user.email %>,
  name:       <%= current_user.username %>,
  created_at: <%= current_user.created_at %>,
  id:         <%= current_user.id %>
}]);
<% end %>

// Set colors
uv_color = '#e23a39';
UserVoice.push(['set', {
  accent_color:             uv_color,
  trigger_color:            uv_color,
  trigger_background_color: uv_color
}]);

// Add trigger
UserVoice.push(['addTrigger', {
  mode:             'satisfaction',
  trigger_position: 'bottom-right'
}]);
</script>
